@model PokemonViewModel

@{
	ViewData["Title"] = @Model.Name;
}

<div name="flex flex-col flex-wrap items-center justify-center w-full my-20">
	<img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/@(Model.Id).png" width="96" height="96" alt="@Model.Name"/>
	@Model.Name
	<div class="flex flex-row rounded-md border w-3/6 p-8">
		<p>
			Height: @(Model.Height / 10)m
			<br/>
			Weight: @(Model.Weight / 10)kg
			<br/>
			Types:
			@{
				var types = Model.Types;
				for (var i = 0; i < types.Count; i++)
				{
					@string.Concat(types[i].First().ToString().ToUpper(), types[i].AsSpan(1));
					@if (i < types.Count - 1)
					{
						<text>, </text>
					}
				}
			}
		</p>
	</div>
</div>